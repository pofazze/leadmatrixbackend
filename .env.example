PORT=4000
# Prefer URI without DB name to pair with DB_NAME below
MONGO_URI=mongodb://127.0.0.1:27017
DB_NAME=LeadsMatrix
LEADS_COLLECTION=m15leads
# Dedicated DB for auth (users)
AUTH_MONGO_URI=mongodb://127.0.0.1:27017
AUTH_DB_NAME=LeadsMatrix
AUTH_USERS_COLLECTION=Users

# Disparo collections (per instance)
DISPARO_COLLECTION=comunidadePofazze
DISPARO_COLLECTION2=StriderLeads
CORS_ORIGINS=http://localhost:5173
SOCKET_IO_PATH=/socket.io

# Cookies and JWT
COOKIE_SECRET=change-me
JWT_SECRET=change-me-access
JWT_REFRESH_SECRET=change-me-refresh

# Z-API configuration
# You can provide one base or multiple bases (comma-separated)
ZAPI_BASE_URLS=https://api.z-api.io,https://api.z-api.com.br
# Or a single base
# ZAPI_BASE_URL=https://api.z-api.io
ZAPI_INSTANCE1_ID=
ZAPI_INSTANCE1_TOKEN=
ZAPI_INSTANCE2_ID=
ZAPI_INSTANCE2_TOKEN=
# Optional extra auth
# ZAPI_CLIENT_TOKEN=
# ZAPI_BEARER_AUTH=false

# Optional: override API path suffixes if your provider differs
# Comma-separated lists, e.g. ZAPI_STATUS_SUFFIXES=status,session
ZAPI_STATUS_SUFFIXES=
ZAPI_QR_SUFFIXES=
# Optional: full path templates; {id} and {token} placeholders will be replaced
# Example: ZAPI_STATUS_TEMPLATES=/api/{id}/{token}/status
ZAPI_STATUS_TEMPLATES=
ZAPI_QR_TEMPLATES=
# Extra headers/query params; supports {id} and {token}
ZAPI_HEADERS=
ZAPI_QUERY_PARAMS=

# Webhook validation
# ZAPI_WEBHOOK_SECRET=changeme

# OpenAI paraphrase settings (optional)
OPENAI_API_KEY=
OPENAI_PARAPHRASE=false
OPENAI_MODEL=gpt-4o-mini
